<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   >

    <TextView
        android:id="@+id/comunal_textview"
        android:layout_width="379dp"
        android:layout_height="60dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="36dp"
        android:text="Коммунальные услуги"
        android:textColor="#1B1717"
        android:textSize="80px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cold_vvod"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginStart="136dp"

        android:layout_marginTop="32dp"
        android:onClick="getCold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cold_textView"
        app:srcCompat="@drawable/vvod"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cold_pay"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:onClick="payCold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cold_textView"
        app:srcCompat="@drawable/payper"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/cold_textView"
        android:layout_width="349dp"
        android:layout_height="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cold_editText"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/cold_editText"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="88dp"
        android:ems="10"
        android:hint="Введите объем потраченной воды"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/cold"
        android:layout_width="296dp"
        android:layout_height="69dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cold"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/warm"
        android:layout_width="295dp"
        android:layout_height="70dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/warp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/warm_pay"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="4dp"
        android:onClick="payWarm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/warm_textView"
        app:srcCompat="@drawable/payper"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/warm_vvod"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="40dp"
        android:onClick="getWarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/warm_textView"
        app:srcCompat="@drawable/vvod"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/warm_editText"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Введите объем потраченной воды"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warm"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/warm_textView"
        android:layout_width="349dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text=""
        android:textSize="40px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/warm_editText"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/show_warm"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:onClick="ShowWarm"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/warm_textView"
        app:srcCompat="@drawable/show" />

    <ImageView
        android:id="@+id/show_cold"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:onClick="ShowCold"
        app:layout_constraintTop_toTopOf="@+id/cold_textView"
        app:srcCompat="@drawable/show"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gaz_image"
        android:layout_width="296dp"
        android:layout_height="69dp"
        android:layout_marginTop="564dp"
        android:layout_marginEnd="124dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/gaz" />

    <EditText
        android:id="@+id/gaz_editText"
        android:layout_width="306dp"
        android:layout_height="49dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="88dp"
        android:ems="10"
        android:hint="Введите объем потраченного газа"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gaz_image" />

    <TextView
        android:id="@+id/gaz_textView"
        android:layout_width="349dp"
        android:layout_height="24dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="44dp"
        android:text=""
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gaz_editText"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/show_gaz"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:onClick="ShowGaz"
        app:layout_constraintTop_toTopOf="@+id/gaz_textView"
        app:srcCompat="@drawable/show"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gaz_pay"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="4dp"
        android:onClick="payGaz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gaz_textView"
        app:srcCompat="@drawable/payper"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/gaz_vvod"
        android:layout_width="138dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="140dp"
        android:onClick="getGaz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/gaz_textView"
        app:srcCompat="@drawable/vvod"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/payAll_button"
        android:layout_width="146dp"
        android:layout_height="37dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="52dp"
        android:background="#34DF3D"
        android:onClick="payAll"
        android:text="Оплатить всё"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaz_pay" />

    <Button
        android:id="@+id/showAll_button"
        android:layout_width="146dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:background="#34DF3D"
        android:onClick="showAll"
        android:text="Показать всё"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/show_gaz"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/AlltextView"
        android:layout_width="318dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="52dp"
        android:textSize="40px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gaz_vvod" />
</androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>